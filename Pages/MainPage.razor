@page "/"

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="text-center">Welcome to Expense Tracker API</h1>
        </div>
        <div class="card-body">
            <p class="lead text-center">
                Easily manage and track your expenses with our simple interface.
            </p>
            
            <div class="row mt-4">
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h3 class="card-title">View Expenses</h3>
                            <p class="card-text">Browse and filter all your recorded expenses</p>
                            <a href="/expenses" class="btn btn-outline-primary btn-lg">View All Expenses</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h3 class="card-title">Create Expense</h3>
                            <p class="card-text">Record a new expense to your tracker</p>
                            <a href="/expenses/new" class="btn btn-outline-success btn-lg">Create New Expense</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-center text-muted">
            <small>Expense Tracker API &copy; @DateTime.Now.Year</small>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        transition: transform 0.3s;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    a.btn {
        border-radius: 25px;
        padding: 10px 25px;
    }
</style>

@code {
    // No JavaScript required
}

